{% assign slide1 = 'slide_1_image.jpg' %}
{% assign slide2 = 'slide_2_image.jpg' %}
{% assign slide3 = 'slide_3_image.jpg' %}

{% if settings.slide1_toggle or settings.slide2_toggle or settings.slide3_toggle %}
<div id="slider_wrap" class="container">
<div id="slider">

    {% if settings.slide1_toggle %}
        {% if settings.slide_1_link %}<a href="{{ settings.slide_1_link }}">{% endif %}
          <img src="{{ slide1 | asset_url }}" title="#htmlcaption-1" />
        {% if settings.slide_1_link %}</a>{% endif %}
    {% endif %}

    {% if settings.slide2_toggle %}
        {% if settings.slide_2_link %}<a href="{{ settings.slide_2_link }}">{% endif %}
          <img src="{{ slide2 | asset_url }}" title="#htmlcaption-2" />
        {% if settings.slide_2_link %}</a>{% endif %}
    {% endif %}

    {% if settings.slide3_toggle %}
        {% if settings.slide_3_link %}<a href="{{ settings.slide_3_link }}">{% endif %}
          <img src="{{ slide3 | asset_url }}" title="#htmlcaption-3" />
        {% if settings.slide_3_link %}</a>{% endif %}
    {% endif %}

</div>
</div>
{% endif %}

<div class="caption_hidden">

<div id="htmlcaption-1">
    <div class="caption_title caption_title-1">
        {% if settings.slide_1_link != '' %}<a class="trs_bg" href="{{ settings.slide_1_link }}">{% else %}<h2>{% endif %}
            {{ settings.slide_1_caption_line1 }}
        {% if settings.slide_1_link != '' %}</a>{% else %}</h2>{% endif %}
    </div>
    <div class="caption_content caption_content-1">
        {% if settings.slide_1_link != '' %}<a class="trs_bg" href="{{ settings.slide_1_link }}">{% endif %}
            <h3><i class="fa fa-arrow-circle-o-right"></i>{{ settings.slide_1_caption_line2 }}</h3>
            <p>{{ settings.slide_1_caption_text }}</p>
        {% if settings.slide_1_link != '' %}</a>{% endif %}
    </div>
</div>

<div id="htmlcaption-2">
    <div class="caption_title caption_title-2">
        {% if settings.slide_2_link != '' %}<a class="trs_bg" href="{{ settings.slide_2_link }}">{% else %}<h2>{% endif %}
            {{ settings.slide_2_caption_line1 }}
        {% if settings.slide_2_link != '' %}</a>{% else %}</h2>{% endif %}
    </div>
    <div class="caption_content caption_content-2">
        {% if settings.slide_2_link != '' %}<a class="trs_bg" href="{{ settings.slide_2_link }}">{% endif %}
            <h3><i class="fa fa-arrow-circle-o-right"></i>{{ settings.slide_2_caption_line2 }}</h3>
            <p>{{ settings.slide_2_caption_text }}</p>
        {% if settings.slide_2_link != '' %}</a>{% endif %}
    </div>
</div>

<div id="htmlcaption-3">
    <div class="caption_title caption_title-3">
        {% if settings.slide_3_link != '' %}<a class="trs_bg" href="{{ settings.slide_3_link }}">{% else %}<h2>{% endif %}
            {{ settings.slide_3_caption_line1 }}
        {% if settings.slide_3_link != '' %}</a>{% else %}</h2>{% endif %}
    </div>
    <div class="caption_content caption_content-3">
        {% if settings.slide_3_link != '' %}<a class="trs_bg" href="{{ settings.slide_3_link }}">{% endif %}
            <h3><i class="fa fa-arrow-circle-o-right"></i>{{ settings.slide_3_caption_line2 }}</h3>
            <p>{{ settings.slide_3_caption_text }}</p>
        {% if settings.slide_3_link != '' %}</a>{% endif %}
    </div>
</div>

</div>

<script type="text/javascript">
$(window).load(function() {
    $('#slider').nivoSlider({
        effect:'fade',
        animSpeed:500,
        pauseTime:7000,
        startSlide:0,
        directionNav:true,
        directionNavHide:false,
        controlNav:false,
        pauseOnHover:true
    });
});
</script>